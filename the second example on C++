#include <algorithm> // для std::lower_bound
#include <queue>
#include <vector>
#include <iostream>

int main() {
    std::priority_queue<int, std::vector<int>, std::greater<>> heap; // минимальная куча
    heap.push(5); // добавляем элемент
    heap.push(3);
    heap.push(8);
    std::cout << heap.top(); // выводит минимальный элемент (3)
}
